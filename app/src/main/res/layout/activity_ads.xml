<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bash">

        <LinearLayout
            android:id="@+id/lin1"
            android:weightSum="100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp">


            <Button
                android:id="@+id/laundry"
                android:layout_weight="50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="قسم الكوي"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:fontFamily="@font/jf"
                android:textStyle="bold"
                android:layout_marginRight="2dp"
                android:background="@drawable/adsbu"/>

            <Button
                android:id="@+id/presser"
                android:layout_weight="50"
                android:layout_width="wrap_content"
                android:fontFamily="@font/jf"
                android:layout_height="wrap_content"
                android:text="قسم الغسيل"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginLeft="8dp"
                android:textColor="@color/white"
                android:background="@drawable/adsbu"/>


        </LinearLayout>

        <FrameLayout
            android:id="@+id/conteinar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="25dp"
            android:layout_below="@+id/lin1">

        </FrameLayout>


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>